@model classifieds.Models.ManageViewModels.AddPhoneNumberViewModel
@{ ViewData["Title"] = "Add Phone Number";
    Layout = "layout/_front"; }

<div class="section Site-content">
    <section class="container">
        <div class="columns is-centered">
            <div class="column is-8">
                <form asp-controller="Users" asp-action="AddPhoneNumber" method="post">
                    <h4>افزودن شماره تلفن</h4>
                    <hr />
                    <div asp-validation-summary="All" class="help is-danger"></div>
                    <div class="field">
                        <input dir="ltr" asp-for="PhoneNumber" class="input" type="text" placeholder="شماره موبایل">
                        <span asp-validation-for="PhoneNumber" class="help is-danger"></span>
                    </div>
                    <div class="field">
                        <p class="control">
                            <button type="submit" class="button is-primary">ارسال کد تایید</button>
                            <a href="/users" class="button is-link">بازگشت</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
