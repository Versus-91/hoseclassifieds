@model classifieds.Models.ManageViewModels.VerifyPhoneNumberViewModel
@{ ViewData["Title"] = "Verify Phone Number";
    Layout = "layout/_front"; }
@section hero{
    <div class="hero is-bold is-primary">
        <div class="hero-body">
            <div class="container">
                sssss
            </div>

        </div>
        <div class="hero-foot">
            <nav class="tabs is-boxed is-fullwidth">
                <div class="container">
                    <ul>
                        <li><a href="/manage">لیست آگهی ها</a></li>
                        <li ><a href="/manage/changepassword">تغییر رمز</a></li>
                        <li class="is-active"><a href="/Manage/AddPhoneNumber">افزودن شماره تماس</a></li>
                        <li><a>مشخصات</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
}
<div class="container">
    <section class="section">
        <h2>@ViewData["Title"].</h2>

        <form asp-controller="Manage" asp-action="VerifyPhoneNumber" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <input asp-for="PhoneNumber" type="hidden" />
            <h4>Add a phone number.</h4>
            <h5>@ViewData["Status"]</h5>
            <hr />
            <div asp-validation-summary="All" class="help is-danger"></div>
            <div class="field">
                <label asp-for="Code" class="label"></label>
                <input asp-for="Code" class="input" />
                <span asp-validation-for="Code" class="help is-dangerr"></span>
            </div>
            <div class="field">
                <button type="submit" class="button is-info">Submit</button>
            </div>
        </form>
    </section>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
