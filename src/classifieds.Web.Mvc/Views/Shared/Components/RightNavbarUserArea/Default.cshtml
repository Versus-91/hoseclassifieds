@model classifieds.Web.Views.Shared.Components.RightNavbarUserArea.RightNavbarUserAreaViewModel
<li class="nav-item dropdown nav-user-menu">
    <a href="javascript:void(0);" class="nav-link" data-toggle="dropdown" role="button">
        @if(Model.LoginInformations.User.Avatar != null){
            <img src="/@Model.LoginInformations.User.Avatar" class="user-image img-circle elevation-2" alt="User Image">
        }else{
           <img src="~/libs/admin-lte/dist/img/avatar5.png" class="user-image img-circle elevation-2" alt="User Image">
        }
    </a>
    <div class="dropdown-menu dropdown-menu-right">
        <a class="dropdown-item" href="/admin/users/ChangePassword">
            <i class="fas fa-user-edit"></i> @L("UpdatePassword")
        </a>
        <a class="dropdown-item"  asp-controller="Account" asp-action="Logout">
            <i class="fas fa-sign-out-alt"></i> @L("Logout")
        </a>
    </div>
</li>

