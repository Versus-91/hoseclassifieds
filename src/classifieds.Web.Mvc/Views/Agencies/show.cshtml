@model classifieds.Web.Models.RealEstate.IndexViewMode
@{
    ViewBag.Title = Model.RealEstate.Name +"مشاوراملاک";
    Layout = "layout/_front";
    }
    @section hero{
<div class="hero is-bold is-primary">
    <div class="hero-body">
        <div class="container">
            <div class="title">
                <div class="columns is-mobile">
                    <div class="column is-2-desktop is-6-mobile">
                        @if (!string.IsNullOrEmpty(Model.RealEstate.Logo))
                        {
                            <figure class="image is-128x128">
                                <img class="is-rounded" src="/@Model.RealEstate.Logo">
                            </figure>
                        }
                        else
                        {
                            <figure class="image is-128x128">
                                <img class="is-rounded" src="/img/user-placeholder.jpg">
                            </figure>
                        }
                    </div>
                    <div class="column is-10-desktop is-6-mobile">
                        <div class="title is-5 my-4">
                            <p class="title is-4">نام : @Model.RealEstate.Name</p>
                            <p class="subtitle">آدرس : @Model.RealEstate.Address</p>
                            <p class="subtitle">تعداد اعلانات : @Model.Total</p>

                        </div>
                    </div>

                </div>

            </div>
        </div>
        </div>
    </div>
}
    <div class="section Site-content">
    <div class="container" style="min-height:50vh;">
                @if (Model.Posts.Count > 0)
                {
                    <div class="container">
                        <div class="columns is-12 is-multiline">
                            @foreach (var post in Model.Posts)
                            {
                                <div class=" column  is-two-thirds-tablet is-half-desktop is-one-third-widescreen is-one-quarter-fullhd">
                                    <a class="fill-div" href="/ads/@post.Id">
                                        <figure class="image is-4by3">
                                            @if (post.Images.Count > 0)
                                            {
                                                <img src="/@post.Images[0].Path?width=600&height=480" alt="Placeholder image" style="border-radius:8px;">
                                            }
                                            else
                                            {
                                                <img src="/img/placeholder.png" alt="Placeholder image" style="border-radius:8px;">
                                            }

                                            @*<div class="overlay-top-corner">
                                                @{featuredIcon}
                                                @{hasImageIcon}
                                                </div>*@
                                        </figure>

                                        <div class="content has-text-right">
                                            <p class="title is-size-6 mt-1 persian"> @post.Category.Name @post.Type.Name @post.Area متری</p>
                                            <p class="subtitle is-size-6 mt-1 persian">  @post.District.Area.City.Name -  @post.District.Name</p>
                                            <p class="subtitle is-size-6 mt-1 persian">قیمت :  @post.Price $</p>
                                        </div>
                                    </a>

                                </div>
                            }
                        </div>
                    </div>
                    <br />
                    <nav class="pagination is-centered" role="navigation" aria-label="pagination">
                        @if (Model.Page > 1)
                        {
                            <a class="pagination-previous" href="?page=@(Model.Page - 1)">صفحه قبل</a>
                        }
                        else
                        {
                            <a class="pagination-previous" disabled>صفحه قبل</a>
                        }
                        @if (Model.HasNextPage)
                        {
                            <a class="pagination-next" href="?page=@(Model.Page + 1)">صفحه بعد</a>
                        }
                        else
                        {
                            <a class="pagination-next" disabled>صفحه بعد</a>
                        }
                    </nav>
                }
                else
                {
                    <p>پستی برای نمایش وجود ندارد</p>
                }
                </div>
                </div>