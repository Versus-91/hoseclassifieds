@using classifieds.Web.Startup
@model List<classifieds.Favorites.Dto.FavoriteDto>
@{
    ViewBag.Title = "علایق";
    ViewBag.CurrentPageName = PageNames.Favorites;
    Layout = "layout/_front";
}

<div class="section Site-content" style="min-height:100vh;">
    <div class="container">
        @if (Model != null && Model.Count > 0)
        {
            <div class="columns is-multiline">
                @foreach (var favorite in Model)
                {
                    <div class=" column  is-two-thirds-tablet is-half-desktop is-one-third-widescreen is-one-quarter-fullhd">
                        <a class="fill-div" href="/ads/@favorite.Post.Id">
                            <figure class="image is-4by3">
                                @if (favorite.Post.Images.Count > 0)
                                {
                                    <img src="/@favorite.Post.Images[0].Path?width=192&height=192" alt="Placeholder image" style="border-radius:15px;">
                                }
                                else
                                {
                                    <img src="/img/placeholder.png" alt="Placeholder image" style="border-radius:15px;">
                                }
                            </figure>
                            <div class="content has-text-right">
                                <p class="title is-size-6 mt-1"> @favorite.Post.Category.Name @favorite.Post.Type.Name @favorite.Post.Area متری</p>
                                <p class="subtitle is-size-6 mt-1">  @favorite.Post.District.City.Name -  @favorite.Post.District.Name</p>
                                <p class="subtitle is-size-6 mt-1">قیمت :  @favorite.Post.Price</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>