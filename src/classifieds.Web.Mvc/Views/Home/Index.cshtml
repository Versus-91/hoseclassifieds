@using classifieds.Web.Startup
@{ ViewBag.Title = L("HomePage");
    ViewBag.CurrentPageName = PageNames.Home;
    Layout = "layout/_front";
}
@section hero{
    <section class="hero is-medium is-primary is-bold">
        <div class="hero-body">
            <div class="container">
                <div class="box has-text-link">

                    <div class="column has-text-centered">
                        <a>
                            <span class="icon is-small"><i class="fas fa-image" aria-hidden="true"></i></span>
                            <span>خرید و فروش</span>
                        </a>

                        <a>
                            <span class="icon is-small"><i class="fas fa-music" aria-hidden="true"></i></span>
                            <span>رهن و اجاره</span>
                        </a>
                    </div>
                    <div class="columns is-centered is-vcentered has-text-centered">
                        <div class="column">
                            <div class="select is-fullwidth v-ce">
                                <select class="select2" id="selectcities">
                                    <option>انتخاب شهر</option>
                                    @foreach (var item in ViewData["cities"] as IEnumerable<classifieds.Cities.Dto.CityDto>)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="column">
                            <div class="select is-fullwidth">
                                <select class="select2" disabled id="selectDistrict">
                                    <option>انتخاب محله </option>
                                    <option>With options</option>
                                </select>
                            </div>
                        </div>
                        <div class="column">
                            <div class="select is-fullwidth">
                                <select class="select2" disabled>
                                    <option>نوع ملک </option>
                                    <option>With options</option>
                                </select>
                            </div>
                        </div>
                        <div class="column">
                            <button class="button is-primary is-rounded">جستجو</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

}
