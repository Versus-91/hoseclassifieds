@using Abp.Authorization.Users
@model classifieds.Web.Models.Account.LoginFormViewModel
@{ ViewBag.Title = L("LogIn"); }
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Account/Login.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Account/Login.min.js" asp-append-version="true"></script>
    </environment>
}
<h4 class="text-center my-3">@L("LogIn")</h4>
<form id="LoginForm" asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
    <input type="hidden" name="returnUrlHash" />
    <div class="field mb-3">
        <div class="control has-icons-right">
            <input type="text" name="usernameOrEmailAddress" class="input" placeholder="@L("UserNameOrEmail")" required autofocus maxlength="@AbpUserBase.MaxEmailAddressLength">
            <div class="input-group-append">
                <span class="icon is-small is-right">
                    <i class="fas fa-user"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="field mb-3">
        <div class="control has-icons-right">
            <input type="password" class="input" name="Password" autocomplete="password" placeholder="@L("Password")" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
            <span class="icon is-small is-right">
                <i class="fas fa-lock"></i>
            </span>
        </div>
    </div>
    <div class="field ">
        <div class="column is-8">
            <div class="icheck-primary">
                <input type="checkbox" id="RememberMe" name="RememberMe" value="true">
                <label for="RememberMe">
                    @L("RememberMe")
                </label>
            </div>
        </div>
        <div class="column col-4">
            <button type="submit" id="LoginButton" class="button is-primary btn-block btn-flat">@L("LogIn")</button>
        </div>
    </div>
</form>
