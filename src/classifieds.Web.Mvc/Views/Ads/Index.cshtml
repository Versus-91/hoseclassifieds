                                            <div class="field">
                                                <p class="control is-expanded">
                                                    <input class="input is-danger" v-model="minRent" type="number" placeholder="حداقل">
                                                </p>
                                            </div>
                                            <div class="field">
                                                <p class="control is-expanded ">
                                                    <input class="input is-success" v-model="maxRent" type="number" placeholder="حداکثر">
                                                </p>
                                            </div>
                                        </div>
