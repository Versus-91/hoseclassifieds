<style>
    .card::before {
        position: absolute;
        top: 2rem;
        right: -0.5rem;
        content: '';
        background: #283593;
        height: 28px;
        width: 28px;
        transform: rotate(45deg);
    }

    .card::after {
        position: absolute;
        content: attr(data-label);
        top: 11px;
        right: -14px;
        padding: 0.5rem;
        width: 10rem;
        background: #3949ab;
        color: white;
        text-align: center;
        font-family: Vazir;
        box-shadow: 4px 4px 15px rgba(26, 35, 126, 0.2);
    }
</style>
