@section scripts{
    <script asp-append-version="true" src="~/lib/PersianDate-1.1.0/dist/persian-date.min.js"></script>
        
    </script>
    <environment names="Development">
        <script asp-append-version="true" src="~/view-resources/Views/UserPosts/pagination.js"></script>
        <script>
          $(function () {
           $('#selectCity').on('select2:select', function (e) {
          if (e.target.value != 0) {
              $("#selectDistrict").prop("disabled", false);
              $.get('/admin/districts/GetByCityId?id=' + e.target.value, function (res) {
                  var items = res.result.map(m => {
                      return {
                          id: m.id,
                          text: m.name
                      }
                  }
                  );
                  items.splice(0, 0, { id: 0, text: "انتخاب محله" })
                  $("#selectDistrict").empty();
                  $("#selectDistrict").select2({ data: items });
              })
          } else {
              $("#selectDistrict").prop("disabled", true);
          }
        });
        });
        </script>

    </environment>
    <environment names="Staging,Production">
        <script asp-append-version="true" src="~/view-resources/Views/UserPosts/pagination.min.js"></script>
    </environment>

}
