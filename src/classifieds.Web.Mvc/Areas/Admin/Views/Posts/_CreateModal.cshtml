@using classifieds.Web.Models.Common.Modals
@{
    Layout = null;
}
<div class="modal fade" id="PostCreateModal" tabindex="-1" role="dialog" aria-labelledby="PostCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewCity")))
            <form name="roleCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="rolename">@L("title")</label>
                        <div class="col-md-9">
                            <input  type="text" name="title" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
