@using classifieds.Web.Startup
@{
    ViewBag.Title = "create new sale report";
    ViewBag.CurrentPageName = "create new sale report";
}

@section scripts
{
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.min.js" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
<script>
    new Vue({
        el:"#app",
        data:{
            step:1,
            postId:null,
            price:null,
            saleDate:null,
            post:null,
            categories:[],
        },
        methods:{
            search:function(){
                axios.get("/api/services/app/post/getdetails?id="+this.postId).then((res)=>{
                    this.post = res.data.result
                });
            },
            submit:function(number){
                axios.defaults.headers.common['X-XSRF-TOKEN'] = document.getElementsByName("__RequestVerificationToken")[0].value;
                var form = new FormData();
                form.append('price', this.price);
                form.append('postId', this.post.id);
                form.append('categoryId', this.post.categoryId);
                form.append('SaleDate', this.saleDate);
                axios.post('/admin/sales/create', form).then((res) => {
                       window.location.href = "/admin/sales";
                   }).catch((err) => console.log(err));
            },
        },

    });
</script>
}
<div class="section">
    <div class="container">
        <div class="row ">
            <div class="col-md-12">
                <div class="card my-5">
                    <div class="card-body" style="min-height:50vh;">
                        <div class="row" v-if="step == 1">
                            <div class="col-md-6">
                                <p>Post ID</p>
                                <div class="form-group row text-center">
                                    <div class="form-group col-md-8 col-10">
                                        <input type="number" class="form-control" v-model.number="postId" />
                                    </div>
                                    <div class="form-group col-md-2 col-2">
                                        <button class="btn btn-success" v-on:click="search()" :disabled="!(!!postId)"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card" style="width: 20rem;" v-if="!!post">
                                    <img class="card-img-top" :src="'/' + post.images[0].path" alt="Card image cap">
                                    <div class="card-body">
                                        <p class="card-text">{{post.title}}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8 text-center"><button class="btn btn-success" v-on:click="step++" :disabled="!(!!post)">Next</button></div>
                        </div>
                        <div class="row" v-else>
                            <div class=col-md-12>
                                {{saleDate}}
                                <form>
                                    @Html.AntiForgeryToken()
                                    <div class="form-row">
                                        <div class="col-md-4 mb-3">
                                            <label for="validationDefault01">Date of sale</label>
                                            <input type="date" class="form-control" id="validationDefault01" v-model="saleDate" placeholder="date of sale" required>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label for="price">Price</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                <input type="number" class="form-control" v-model.number="price" name="price"
                                                       placeholder="Price" aria-describedby="inputGroupPrepend2" required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleFormControlTextarea1">Benefits </label>
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
                                    </div>

                                    <button class="btn btn-primary" type="button" v-on:click="submit">Submit form</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>