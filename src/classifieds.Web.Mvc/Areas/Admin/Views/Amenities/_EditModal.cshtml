@using classifieds.Web.Models.Common.Modals
@model classifieds.Amenities.Dto.AmenityDto
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Edit")))
<form name="AmenityEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="modal-body">
        <div class="modal-body">
            <div class="form-group row required">
                <label class="col-md-3 col-form-label" for="rolename">@L("Name")</label>
                <div class="col-md-9">
                    <input type="text" name="Name" class="form-control" required maxlength="32" minlength="2" value="@Model.Name">
                </div>
            </div>
            <div class="form-group row required">
                <label class="col-md-3 col-form-label" for="rolename">@L("Description")</label>
                <div class="col-md-9">
                    <input type="text" name="Description" class="form-control" required maxlength="32" minlength="2" value="@Model.Description">
                </div>
            </div>
            <div class="form-group row ">
                <label class="col-md-3 col-form-label" for="rolename">@L("Icon")</label>
                <div class="col-md-9">
                    <input type="text" name="icon" class="icon-class-input form-control" style="display:none" value="@Model.Icon" />
                    <button type="button" class="btn btn-primary picker-button">Pick an Icon</button>
                    <span class="demo-icon"></span>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Amenities/_EditModal.js" asp-append-version="true"></script>
